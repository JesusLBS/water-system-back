{
  "name": "water-system-back",
  "version": "1.0.0",
  "description": "Back",
  "main": "app.js",
  "scripts": {
    "postinstall": "husky",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "node --watch --env-file .env.dev app.js",
    "docker": "node --watch --env-file .env.docker app.js",
    "start": "node --env-file .env app.js",
    "db:create": "echo $NODE_ENV && npx sequelize-cli db:create --env $NODE_ENV",
    "db:drop": "echo $NODE_ENV && npx sequelize-cli db:drop --env $NODE_ENV",
    "migrate": "echo $NODE_ENV && npx sequelize-cli db:migrate --env $NODE_ENV",
    "migrate:rollback": "echo $NODE_ENV && npx sequelize-cli db:migrate:undo:all --env $NODE_ENV",
    "seed": "echo $NODE_ENV && npx sequelize-cli db:seed --env $NODE_ENV --seed",
    "seed:all": "echo $NODE_ENV && npx sequelize-cli db:seed:all --env $NODE_ENV",
    "seed:generate": "echo $NODE_ENV && npx sequelize-cli seed:generate --env $NODE_ENV --name",
    "seed:rollback": "echo $NODE_ENV && npx sequelize-cli db:seed:undo --env $NODE_ENV",
    "seed:rollback-all": "echo $NODE_ENV && npx sequelize-cli db:seed:undo:all --env $NODE_ENV",
    "migrate:seed": "run-s migrate seed:all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JesusLBS/water-system-back.git"
  },
  "keywords": [],
  "author": "Jesus Chicho Hern√°ndez",
  "license": "SEE LICENSE IN  NOTICE.txt",
  "bugs": {
    "url": "https://github.com/JesusLBS/water-system-back/issues"
  },
  "homepage": "https://github.com/JesusLBS/water-system-back#readme",
  "dependencies": {
    "axios": "^1.7.2",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "express": "^4.19.2",
    "express-validator": "^7.1.0",
    "firebase-admin": "^12.2.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "morgan": "^1.10.0",
    "mysql2": "^3.10.2",
    "sequelize": "^6.37.3",
    "winston": "^3.13.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/js": "^9.6.0",
    "eslint": "9.x",
    "globals": "^15.8.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "npm-run-all2": "^6.2.2",
    "prettier": "^3.3.2",
    "sequelize-cli": "^6.6.2"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add ."
    ]
  }
}